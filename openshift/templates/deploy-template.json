{
  "apiVersion": "v1",
  "kind": "Template",
  "metadata": {
    "annotations": {
      "description": "Deployment template mygovbc-msp-service",
      "tags": "msp-service"
    },
    "name": "mygovbc-msp-service"
  },
  "objects": [
    {
      "apiVersion": "v1",
      "kind": "DeploymentConfig",
      "metadata": {
        "creationTimestamp": null,
        "labels": {
          "app": "${NAME}"
        },
        "name": "${NAME}"
      },
      "spec": {
        "replicas": 2,
        "selector": {
          "app": "${NAME}",
          "deploymentconfig": "${NAME}"
        },
        "strategy": {
	  "activeDeadlineSeconds": 21600,
          "rollingParams": {
            "intervalSeconds": 1,
            "maxSurge": "25%",
            "maxUnavailable": "25%",
            "timeoutSeconds": 600,
            "updatePeriodSeconds": 1
          },
          "type": "Rolling"
        },
        "template": {
          "metadata": {
            "creationTimestamp": null,
            "labels": {
              "app": "${NAME}",
              "deploymentconfig": "${NAME}"
            }
          },
          "spec": {
            "containers": [
              {
                "image": "${NAME}",
                "imagePullPolicy": "Always",
                "name": "${NAME}",
                "ports": [
                  {
                    "containerPort": 8080,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "TARGET_URL",
                    "value": "${TARGET_URL}"
                  },
                  {
                    "name": "TARGET_USERNAME_PASSWORD",
                    "value": "${TARGET_USERNAME_PASSWORD}"
                  },
                  {
                    "name": "MUTUAL_TLS_PEM_KEY_BASE64",
                    "value": "${MUTUAL_TLS_PEM_KEY_BASE64}"
                  },
                  {
                    "name": "MUTUAL_TLS_PEM_KEY_PASSPHRASE",
                    "value": "${MUTUAL_TLS_PEM_KEY_PASSPHRASE}"
                  },
                  {
                    "name": "MUTUAL_TLS_PEM_CERT",
                    "value": "${MUTUAL_TLS_PEM_CERT}"
                  },
                  {
                    "name": "MUTUAL_TLS_PEM_CA",
                    "value": "${MUTUAL_TLS_PEM_CA}"
                  },
                  {
                    "name": "SECURE_MODE",
                    "value": "${SECURE_MODE}"
                  },
                  {
                    "name": "USE_MUTUAL_TLS",
                    "value": "${USE_MUTUAL_TLS}"
                  },
                  {
                    "name": "SYSLOG_PORT",
                    "value": "${SYSLOG_PORT}"
                  },
                  {
                    "name": "SYSLOG_HOST",
                    "value": "${SYSLOG_HOST}"
                  },
                  {
                    "name": "AUTH_TOKEN_KEY",
                    "value": "${AUTH_TOKEN_KEY}"
                  },
                  {
                    "name": "USE_AUTH_TOKEN",
                    "value": "${USE_AUTH_TOKEN}"
                  }
                ],
                "resources": {
                  "requests": {
                    "cpu": "10m",
                    "memory": "100Mi"
                  },
                  "limits": {
                    "cpu": "250m",
                    "memory": "300Mi"
                  }
                },
                "livenessProbe": {
                  "httpGet": {
                    "path": "/status",
                    "port": 8080,
                    "scheme": "HTTP"
                  },
                  "initialDelaySeconds": 30,
                  "timeoutSeconds": 60,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "failureThreshold": 3
                },
                "readinessProbe": {
                  "httpGet": {
                    "path": "/status",
                    "port": 8080,
                    "scheme": "HTTP"
                  },
                  "initialDelaySeconds": 10,
                  "timeoutSeconds": 60,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "failureThreshold": 3
                }
              }
            ],
            "dnsPolicy": "ClusterFirst",
            "restartPolicy": "Always",
            "securityContext": {
            },
            "terminationGracePeriodSeconds": 30
          }
        },
        "test": false,
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "${NAME}"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "namespace": "${IMAGE_NAMESPACE}",
                "name": "${NAME}:${TAG_NAME}"
              }
            }
          }
        ]
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "creationTimestamp": null,
        "labels": {
          "app": "${NAME}"
        },
        "name": "${NAME}"
      },
      "spec": {
        "ports": [
          {
            "name": "8080-tcp",
            "port": 8080,
            "protocol": "TCP",
            "targetPort": 8080
          }
        ],
        "selector": {
          "app": "${NAME}",
          "deploymentconfig": "${NAME}"
        },
        "sessionAffinity": "None",
        "type": "ClusterIP"
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Route",
      "metadata": {
        "labels": {
          "app": "${NAME}"
        },
        "name": "${NAME}"
      },
      "spec": {
        "host": "${APPLICATION_DOMAIN}",
        "port": {
          "targetPort": "8080-tcp"
        },
        "tls": {
          "insecureEdgeTerminationPolicy": "Redirect",
          "termination": "edge"
        },
        "to": {
          "kind": "Service",
          "name": "${NAME}",
          "weight": 100
        }
      }
    },
    {
      "apiVersion": "extensions/v1beta1",
      "kind": "HorizontalPodAutoscaler",
      "metadata": {
        "name": "${NAME}",
        "labels": {
          "app": "${NAME}"
        }
      },
      "spec": {
        "scaleRef": {
          "kind": "DeploymentConfig",
          "name": "${NAME}",
          "apiVersion": "extensions/v1beta1",
          "subresource": "scale"
        },
        "minReplicas": 2,
        "maxReplicas": 6
      }
    }
  ],
  "parameters": [
    {
      "description": "The name assigned to all of the openshift objects defined in this template.",
      "displayName": "Name",
      "name": "NAME",
      "required": true,
      "value": "mygovbc-msp-service"
    },
    {
      "description": "Application domain name, what external domain name you want.  You must change this value!",
      "displayName": "Application Domain",
      "name": "APPLICATION_DOMAIN",
      "required": true,
      "value": "captcha-service-gcpe-mygovbc-demo.pathfinder.gov.bc.ca"
    },
    {
      "description": "The namespace where to get the above image name, do not use the default!",
      "displayName": "Image Namespace",
      "name": "IMAGE_NAMESPACE",
      "required": true,
      "value": ""
    },
    {
      "description": "The TAG name for this environment, e.g., dev, test, prod",
      "displayName": "Env TAG name",
      "name": "TAG_NAME",
      "value": "dev"
    },
    {
      "description": "Target URL of the mspde application running at HIBC",
      "displayName": "Target URL",
      "name": "TARGET_URL",
      "required": true,
      "value": "https://d2mspde.maximusbc.ca"
    },
    {
      "description": "Target Username and password of the mspde application running at HIBC",
      "displayName": "Target Username and Password",
      "name": "TARGET_USERNAME_PASSWORD",
      "required": true,
      "value": ""
    },
    {
      "description": "Mutual TLS PEM Key in Base64",
      "displayName": "Mutual TLS Key",
      "name": "MUTUAL_TLS_PEM_KEY_BASE64",
      "required": true,
      "value": ""
    },
    {
      "description": "Mutual TLS PEM Key Passphrase",
      "displayName": "Mutual TLS Key Passphrase",
      "name": "MUTUAL_TLS_PEM_KEY_PASSPHRASE",
      "required": true,
      "value": ""
    },
    {
      "description": "Mutual TLS PEM Certificate",
      "displayName": "Mutual TLS PEM Certificate",
      "name": "MUTUAL_TLS_PEM_CERT",
      "required": true,
      "value": ""
    },
    {
      "description": "Mutual TLS PEM Certificate Authority",
      "displayName": "Mutual TLS PEM CA",
      "name": "MUTUAL_TLS_PEM_CA",
      "required": true,
      "value": ""
    },
    {
      "description": "Flag to indicate secure mode (true or false)",
      "displayName": "Secure Mode Flag",
      "name": "SECURE_MODE",
      "required": true,
      "value": "true"
    },
    {
      "description": "Flag to indicate mutual TLS authentication mode (true or false)",
      "displayName": "Mutual TLS Flag",
      "name": "USE_MUTUAL_TLS",
      "required": true,
      "value": "true"
    },
    {
      "description": "Syslog Hostname",
      "displayName": "Syslog Hostname",
      "name": "SYSLOG_HOST",
      "required": true,
      "value": "localhost"
    },
    {
      "description": "Syslog Port",
      "displayName": "Syslog Port",
      "name": "SYSLOG_PORT",
      "required": true,
      "value": "5513"
    },
    {
      "description": "Authentication Token Key",
      "displayName": "Auth Tokey Key",
      "name": "AUTH_TOKEN_KEY",
      "required": true,
      "value": ""
    },
    {
      "description": "Flag to indicate to use Authentication Tokens (true or false)",
      "displayName": "Use Authentication Token Flag ",
      "name": "USE_AUTH_TOKEN",
      "required": true,
      "value": "true"
    }
  ]
}
